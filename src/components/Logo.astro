---
const {name} = Astro.props;
---

<a href="/" class="profile">
    <div class="img__container">
    </div>
    <h3 class="color__gradiente header__title"> TNCRP
        {name}
    </h3>
</a>

<style>

 .img__container {
	border-radius: 100%;
	transition: 0.35s transform;
}


 .img__container:hover {
	transform: scale(1.1);
}

 .profile {
	display: flex;
	border-radius: 50%;
	align-items: center;
	gap: 1.5rem;
}
</style>