---
import Title from "../components/atoms/Title.astro";
import Boton from "./atoms/Boton.astro";
---

<section id="blog" class="flex flex-col items-center w-full h-full md:max-w-full justify-center flex-wrap px-4">

  <Title contenido="Socials" margin="2rem"/>
  <div class="flex self-center gap-[20px] justify-center min-w-[30rem] md:max-w-full flex-wrap flex-col md:flex-row">
    <!-- Discord Button -->
    <a href="https://discord.gg/9nk9eqUW" target="_blank" class="social-card discord">
      <div class="social-image-container">
        <img src="https://eclipse-rp.net/images/desktop/social/dc-background.png" alt="Discord Background" class="background-image" />
        <img src="https://eclipse-rp.net/images/desktop/social/dc-character.png" alt="Discord Character" class="character-image" />
        <img src="https://eclipse-rp.net/images/desktop/social/ecrpdc-logo.png" alt="Discord Logo" class="text-image" />
      </div>
    </a>

    <!-- YouTube Button -->
    <a href="https://www.youtube.com/@TNCRPImprov" target="_blank" class="social-card youtube">
      <div class="social-image-container">
        <img src="https://eclipse-rp.net/images/desktop/social/yt-background.png" alt="YouTube Background" class="background-image" />
        <img src="https://eclipse-rp.net/images/desktop/social/yt-character.png" alt="YouTube Character" class="character-image" />
        <img src="https://eclipse-rp.net/images/desktop/social/ecrpyt-logo.png" alt="YouTube Logo" class="text-image" />
      </div>
    </a>

    <!-- Instagram Button -->
    <a href="https://www.x.com/home" target="_blank" class="social-card instagram">
      <div class="social-image-container">
        <img src="https://eclipse-rp.net/images/desktop/social/fb-background.png" alt="Instagram Background" class="background-image" />
        <img src="https://eclipse-rp.net/images/desktop/social/fb-character.png" alt="Instagram Character" class="character-image" />
        <img src="../img/twitterlogo.png" alt="Instagram Logo" class="text-image" />
      </div>
    </a>
  </div>
  <div class="flex justify-center m-5 max-w-full px-3">
  </div>
</section>

<style>
  /* Card container styling */
  .social-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 28rem; /* Adjusted width */
    height: 36rem; /* Doubled the height */
    padding: 0; /* No gap between glow and background */
    border-radius: 12px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    transition: transform 0.3s, box-shadow 0.3s;
    text-decoration: none; /* Remove underline */
    color: inherit; /* Inherit text color */
    margin-bottom: 10rem;
  }

  /* Glow effect on hover */
  .social-card:hover {
    transform: translateY(-5px); /* Lift the card on hover */
  }

  .social-card.discord:hover {
    box-shadow: 0 0 20px rgba(114, 137, 218, 0.8); /* Discord blue */
  }

  .social-card.youtube:hover {
    box-shadow: 0 0 20px rgba(255, 0, 0, 0.8); /* YouTube red */
  }

  .social-card.instagram:hover {
    box-shadow: 0 0 20px rgba(66, 103, 178, 0.8); /* Facebook blue */
  }

  /* Image container for stacking */
  .social-image-container {
    position: relative;
    width: 100%;
    height: 100%; /* Match card height */
  }

  /* Background image styling */
  .background-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensure the background image covers the container */
    border-radius: 12px; /* Match card corners */
  }

  /* Character image styling (flat to the bottom) */
  .character-image {
    position: absolute;
    bottom: 0; /* Completely flush with the bottom */
    left: 50%;
    transform: translateX(-50%); /* Center horizontally */
    width: 40%; /* Set size relative to the container */
    height: auto;
    z-index: 1; /* Ensure it appears above the background */
  }

  /* Text image styling (center-top) */
  .text-image {
    position: absolute;
    top: 15%; /* Adjust position near the top */
    left: 50%;
    transform: translateX(-50%); /* Center horizontally */
    width: 60%; /* Adjust size of the text/logo */
    height: auto;
    z-index: 2; /* Ensure it appears above the background */
  }
</style>
